set clipboard=unnamed,autoselect
set cursorline 		" カーソル行をハイライト
set hlsearch 		" ハイライトサーチ
set ignorecase 		" 検索時、大文字・小文字を気にせず
set incsearch		" do incremental searching
set shiftwidth=4
set tabstop=4
set virtualedit=all

" 自動的に閉じ括弧を入力
imap {{ {}<LEFT>
imap [[ []<LEFT>
imap (( ()<LEFT>

" 日本語キーボードも使うので
nnoremap ( *
nnoremap ! ~

" コロンとセミコロンを入れ替える
nnoremap ; :
nnoremap : ;
vnoremap ; :
vnoremap : ;

" ヴィジュアルモードの時にバックススペースで削除
vnoremap <BS> d

" ファイル全体の整形
nnoremap == gg=Gg;
