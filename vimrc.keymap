if !has('nvim')
	set clipboard=unnamed,autoselect
endif

set cursorline 		" カーソル行をハイライト
set hlsearch 			" ハイライトサーチ
set history=50		" keep 50 lines of command line history
set ignorecase 		" 検索時、大文字・小文字を気にせず
set iminsert=0
set imsearch=-1
set incsearch			" do incremental searching
set nowrap
set number
set ruler		    	" show the cursor position all the time
set shiftwidth=4
set showcmd		    " display incomplete commands
set tabstop=4
set virtualedit=all
set whichwrap=<,>,[,]

" 自動的に閉じ括弧を入力
imap {{ {}<LEFT>
imap [[ []<LEFT>
imap (( ()<LEFT>

" 日本語キーボード互換
nnoremap ( *
nnoremap ! ~

" コロンとセミコロンを入れ替える
nnoremap ; :
nnoremap : ;

" ヴィジュアルモードの時にバックススペースで削除
vnoremap <BS> d

" CTRL-X でカット
vnoremap <C-X> "+x

" CTRL-C でコピー
vnoremap <C-C> "+y

" CTRL-V でペースト
map <C-V>		"+gP
cmap <C-V>		<C-R>+

" 範囲選択と貼りつけ
exe 'inoremap <script> <C-V>' paste#paste_cmd['i']
exe 'vnoremap <script> <C-V>' paste#paste_cmd['v']

" CTRL-Q で範囲選択
noremap <C-Q>		<C-V>

" CTRL-S でセーブ
noremap <C-S>		:update<CR>
vnoremap <C-S>		<C-C>:update<CR>
inoremap <C-S>		<C-O>:update<CR>

" CTRL-Z でundo
noremap <C-Z> u
inoremap <C-Z> <C-O>u

" CTRL-A で全選択
noremap <C-A> gggH<C-O>G
inoremap <C-A> <C-O>gg<C-O>gH<C-O>G
cnoremap <C-A> <C-C>gggH<C-O>G
onoremap <C-A> <C-C>gggH<C-O>G
snoremap <C-A> <C-C>gggH<C-O>G
xnoremap <C-A> <C-C>ggVG

" Tab でウインドウの切り替え
noremap <Tab> <C-W>w
onoremap <Tab> <C-C><C-W>w

" 画面分割
noremap _ :split<Return><C-w>w
noremap <Bar> :vsplit<Return><C-w>w

" ウインドウの移動コマンド
map th <C-w>h
map tk <C-w>k
map tj <C-w>j
map tl <C-w>l
noremap tt :bnext<Return>

" ファイル全体の整形
nnoremap == gg=G
